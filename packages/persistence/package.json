{
  "name": "@kwitch/persistence",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./redis": {
      "types": "./src/redis.ts",
      "default": "./dist/redis.js"
    },
    "./repository": {
      "types": "./src/repository/index.ts",
      "default": "./dist/repository/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typeorm": "typeorm-ts-node-esm",
