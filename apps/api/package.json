{
  "name": "@kwitch/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dotenvx": "dotenvx",
    "dev": "dotenvx run -- tsx --watch src/index.ts",
    "prebuild": "pnpm run db:generate",
    "build": "tsup",
    "start": "node dist/index.js",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma db studio"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "tsup": {
    "format": "esm",
    "splitting": false,
    "entry": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.9.1",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.10",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/validator": "^13.12.2",
    "prisma": "^5.22.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.22.0",
    "@kwitch/domain": "workspace:*",
    "@kwitch/typescript-config": "workspace:*",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "esm-module-alias": "^2.2.1",
    "express": "^4.21.0",
    "express-session": "^1.18.0",
    "get-root-path": "^2.0.2",
    "helmet": "^8.0.0",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "ioredis": "^5.4.1",
    "mediasoup": "^3.14.14",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.2"
  }
}
